Vagrant.configure('2') do |config|

  config.vm.box = 'bento/ubuntu-16.04'

  # public ports
  # {
  #   8080 => 80,
  # }.each do |host, guest|
  #   config.vm.network :forwarded_port, guest: guest, host: host
  # end

  %w(
    docker
  ).each do |host_name|
    config.vm.define host_name do |host|

      host.vm.hostname = host_name

      # install Docker
      host.vm.provision 'docker'

    end

  end
  
end
